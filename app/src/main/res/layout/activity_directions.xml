<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amanhans.mapbox_app.DirectionsActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="32.7266"
        mapbox:mapbox_cameraTargetLng="74.8570"
        mapbox:mapbox_cameraZoom="14"/>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map_view_location_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="16dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginRight="16dp"
        android:layout_marginTop="550dp"
        app:cardCornerRadius="3dp"
        tools:ignore="MissingPrefix">
        <ScrollView android:layout_marginTop="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/background_circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:src="@drawable/red_marker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/carbo_insert"
                android:text="Dogra Art Museum"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Head Southeast"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="88 m  Turn left at Old High Court"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="31 m  Turn left
 Pass by Rani Chadki (on the left)"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="180 m Turn left at Govt. Higher Secondary School, Jullaka Mohalla toward Circular Rd"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="72 m Turn right onto Circular Rd
Pass by SBM Toilet (on the left)"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="800m At Indira Gandhi Chowk,take the 1st exit New Tawi Bridge 2"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="900m At the roundbout, take the 2nd exit"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/background_circle1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:src="@drawable/red_marker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/carbo_insert"
                android:text="Bahu Fort"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>

        </LinearLayout>
        </LinearLayout>
        </ScrollView>


    </android.support.v7.widget.CardView>

</RelativeLayout>
